<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_banckcard_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_v2"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/personInfoText_V2"
            android:text="银行"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/add_bankcard_name"
                style="@style/personInfoEditText_V2"
                android:hint="请输入您要绑定的银行卡名称"
                android:singleLine="true"
                android:textSize="15sp" />

            <zhidanhyb.huozhu.View.DividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"></zhidanhyb.huozhu.View.DividerView>
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/personInfoText_V2"
            android:text="持卡人"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/add_bankcard_user"
                style="@style/personInfoEditText_V2"
                android:singleLine="true"
                android:textSize="15sp" />

            <zhidanhyb.huozhu.View.DividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"></zhidanhyb.huozhu.View.DividerView>

        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            style="@style/personInfoText_V2"
            android:text="卡号"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/add_bankcard_number"
                style="@style/personInfoEditText_V2"
                android:inputType="number"
                android:textSize="15sp" />

            <zhidanhyb.huozhu.View.DividerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"></zhidanhyb.huozhu.View.DividerView>

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/v2_btn_submit_with_divider_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_bankcard_cancle_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/deletecancle"
            android:textColor="@color/dialog_text_desc_v2"
            android:textSize="16sp" />

        <ImageView
            android:minWidth="8dp"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/v2_littlt_divider" />

        <TextView
            android:id="@+id/add_bankcard_button"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/dialog_text_desc_v2"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>