<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/v2_dialog_choose_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange" >

        <TextView
            android:id="@+id/sendorder_cancle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:text="[取消]"
            android:textColor="@color/dialog_text_title_v2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="+什么时候发车+"
            android:textColor="@color/dialog_text_title_v2" />

        <TextView
            android:id="@+id/sendorder_sure_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="[确定]"
            android:textColor="@color/dialog_text_title_v2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal" >

        <zhidanhyb.huozhu.View.WheelView
            android:id="@+id/sendorder_date_wheelview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1" />

        <zhidanhyb.huozhu.View.WheelView
            android:id="@+id/sendorder_ampm_wheelview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1" />

        <zhidanhyb.huozhu.View.WheelView
            android:id="@+id/sendorder_time_wheelview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>