<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d333"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/register_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/register_getcode_bt"
            android:layout_width="99dp"
            android:layout_height="40dp"
            android:layout_below="@+id/register_arrows_tv"
            android:background="@drawable/register_get_code_button" />

        <TextView
            android:id="@+id/register_arrows_tv"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/register_arrows" />
    </RelativeLayout>

</RelativeLayout>