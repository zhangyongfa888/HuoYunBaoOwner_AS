<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sendorder_list_bg_v2"
    android:orientation="vertical">

    <include layout="@layout/titlelayout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <zhidanhyb.huozhu.View.Swipemenulistview.SwipeMenuListView
            android:id="@+id/sendorder_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/sendorder_list_divider_v2"
            android:dividerHeight="1dp"></zhidanhyb.huozhu.View.Swipemenulistview.SwipeMenuListView>

        <LinearLayout
            android:id="@+id/v2_sendorderlist_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/v2_submit_bg_orange_selector"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="-"
                    android:textColor="@color/dialog_text_title_v2"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/sendorder_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/orderadd"
                    android:textColor="@color/dialog_text_title_v2"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="-"
                android:textColor="@color/dialog_text_title_v2"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/sendorder_fahuo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_circular_bead_buttons"
                    android:padding="10dp"
                    android:text="@string/orderfahuo"
                    android:textColor="@color/dialog_text_title_v2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="-"
                    android:textColor="@color/dialog_text_title_v2"
                    android:textSize="26sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>