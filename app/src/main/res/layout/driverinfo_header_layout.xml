<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sendorder_list_bg_v2"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/v2_me_top"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="210dp">

            <ImageView
                android:id="@+id/v2_me_top_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/v2_main_banner"
                android:minHeight="140dp" />

            <FrameLayout
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center">


                <zhidanhyb.huozhu.View.CircleImageView
                    android:id="@+id/driver_head_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/head" />

                <TextView
                    android:id="@+id/main_me_status_textveiw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="10dp"
                    android:text="[未认证]"
                    android:textColor="@color/text_v2" />
            </FrameLayout>


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/sendorder_list_bg_v2"
            android:gravity="center"
            android:minHeight="60dp">

            <TextView
                android:id="@+id/driver_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="刘家辉刘家辉刘家辉"
                android:textColor="@color/orange_v2" />

            <ImageView
                android:id="@+id/v2_me_vip"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/v2_me_v" />

            <ImageView
                android:id="@+id/driver_level_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/v2_me_level" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sendorder_list_divider_v2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sendorder_list_bg_v2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/v2_message_little" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="个人信息"
                    android:textColor="@color/text_v2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="好评率"
                    android:textColor="@color/orange_v2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/driver_applause_rate_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text=" 90%"
                    android:textColor="@color/orange_v2"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/driver_license_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="车牌号：冀R12345"
                android:textColor="@color/text_v2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/driver_ton_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="车辆载重：11吨"
                android:textColor="@color/text_v2" />

            <TextView
                android:id="@+id/driver_size_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="车辆尺寸：45"
                android:textColor="@color/text_v2" />

            <TextView
                android:id="@+id/driver_phone_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:text="联系电话：111239239235"
                android:textColor="@color/text_v2"></TextView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sendorder_list_divider_v2"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/v2_message_little" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="用户评论"
                android:textColor="@color/text_v2" />

            <TextView
                android:id="@+id/driver_bargain_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/text_v2" />
        </LinearLayout>
    </LinearLayout>

