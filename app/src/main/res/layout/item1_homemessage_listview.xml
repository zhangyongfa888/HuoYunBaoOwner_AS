<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/imageView1_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/textView1_pushList_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageView1_icon"
        android:layout_marginLeft="20dp"
        android:text="哈哈"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1_listView">
        <TextView
            android:id="@+id/textView2_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/textView2_pushList_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView2_icon"
            android:layout_marginLeft="20dp"
            android:text="哈哈"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/item1_imageView_ad"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/layout2_listView"
        android:src="@drawable/v2_banner"
        android:scaleType="fitXY"/>

</RelativeLayout>