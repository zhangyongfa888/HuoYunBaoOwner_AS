<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/v2_dialog_ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/v2_dialog_positive_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/v2_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="验证码错误"
                android:textColor="@color/dialog_text_title_v2"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/dialog_bg_v2"
            android:gravity="center"
            android:minHeight="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dialog_custom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <!--<include layout="@layout/v2_dialog_custom"></include>-->
                <TextView
                    android:id="@+id/v2_dialog_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="对不起，输入的验证码错误。\n请重新输入"
                    android:textColor="@color/dialog_text_desc_v2"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/dialog_bg_v2"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/dialog_ll_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="-"

                    android:textColor="@color/dialog_text_left_v2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/v2_dialog_left"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:text=" 返回 "
                    android:textColor="@color/dialog_text_left_v2"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"

                android:text="-"
                android:textColor="@color/dialog_text_left_v2"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/v2_dialog_ll_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/v2_dialog_right"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:padding="10dp"
                    android:text=" 确认 "
                    android:textColor="@color/dialog_text_left_v2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="-"
                    android:textColor="@color/dialog_text_left_v2"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>